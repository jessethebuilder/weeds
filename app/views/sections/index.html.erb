<%= content_for :head do %>
  <%= fan_page_og_tags %>
<% end %>

<%= content_for :below_banner do %>
  <div class="container">
    <%= render :partial => 'parts/social_networking_general' %>
    <hr>
  </div>
<% end %>

<div id="sections" class="container">
  <ul class="nav nav-pills">
    <% @sections.each do |s| %>
      <li>
        <%= link_to s.name, "#section_#{s.id}", 'data-toggle' => 'tab' %>
      </li>
    <% end %>
  </ul>

  <div class="tab-content">
    <% @sections.each do |s| %>
        <div class="tab-pane fade" id="<%= "section_#{s.id}" %>">
          <%= render :partial => 'items/list', :locals => {:section => s} %>
        </div>

    <% end %>
  </div><!--tab content-->
</div>

<script>
  activateFirstTab();
</script>

