<%# do_row = true %>

<% section.items.each do |i| %>
    <%#= '<div class="row">'.html_safe if do_row %>

    <div class="col-md-6">
      <div class="menu_item" id="item_<%= i.id %>">
        <%= image_tag i.images.sample.image_url(:menu_image), :class => 'menu_image' unless i.images.empty? %>

        <h3>
          <%= link_to i.name, item_path(i) %>
          <small>
            <strong>
              <%= i.description %>

            </strong>
          </small>
        </h3>

          <%= render :partial => 'order_items/form', :locals => {:item => i} %>


      </div>

    </div><!--col-->
    <%#= '</div><!--row-->'.html_safe if do_row == false || section.items.last == i %>
    <%# do_row = !do_row %>
<% end %>
