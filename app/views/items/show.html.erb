<div class="container">
  <h1 class="highlight">
    <%= @item.name %>
    <small>
      <%= @item.description %>
    </small>
  </h1>

  <div class="row">
    <div class="col-md-6">
      <%= render :partial => 'order_items/form', :locals => {:item => @item}%>


      <!--todo dehack these fb buttons-->
      <!--<div class="fb-like" data-href="http://weeds.herokuapp.com" data-width="100" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>-->
      <div class="fb-like" data-href="<%= request.url %>" data-width="100" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>



    </div><!--col-->

    <% unless @item.images.count == 0 %>
      <div class="col-md-6">
        <%= express_carousel(@item, :use_indicators => false) %>
      </div><!--col-->
    <% end %>

  </div><!--row-->

  <!--<div class="row">-->
    <!--<div class="col-md-6">-->
      <!--<%#= fb_social_plugin item_url(@item) %>-->
    <!--</div>&lt;!&ndash;col&ndash;&gt;-->
  <!--</div>&lt;!&ndash;row&ndash;&gt;-->

</div>

<div id="fb-root"></div>
<script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=<%= FACEBOOK_ID %>";
    fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>