<%= content_for :title do %>
  <%= "#{STORE_NAME} | #{@item.section.name} | #{@item.name}" %>
<% end %>

<div class="container">
  <h1 class="highlight">
    <%= @item.name %>
    <small>
      <%= @item.description %>
    </small>
  </h1>

  <div class="row">
    <div class="col-md-6">
      <%= render :partial => 'order_items/form', :locals => {:item => @item}%>
        <%= like_on_facebook_button(facebook_href, :include_script => true, :fb_id => FACEBOOK_ID) %>
        <%= tweet_button CGI.escape(default_tweet(@item)), 'anysoftdotnet', :url => CGI.escape(request.url), :include_script => true%>
        <hr>
        <%= facebook_comments(request.url, :include_script => true, :fb_id => FACEBOOK_ID, :include_root => false) %>

    </div><!--col-->

    <% unless @item.images.count == 0 %>
      <div class="col-md-6">
        <%= express_carousel(@item, :use_indicators => false) %>
      </div><!--col-->
    <% end %>

  </div><!--row-->
</div>

