<%= form_for image, :html => {:multipart => true} do |f| %>

  <%= f.hidden_field :has_images_type, :value => object.class.name %>
  <%= f.hidden_field :has_images_id, :value => object.id %>

  <div class="form-group">
    <%= f.label :image, 'Upload Image', :class => 'control-label' %>
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.label :remote_image_url, 'or Specify a URL', :class => 'control-label' %>
    <%= f.text_field :remote_image_url, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description, :class => 'control-label' %>
    <%= f.text_field :description, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Add Image', :class => 'btn btn-primary' %>
  </div>
<% end %>